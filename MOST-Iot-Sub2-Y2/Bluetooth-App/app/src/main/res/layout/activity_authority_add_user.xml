<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mira.example.com.a2017617iot1.Authority_add_user">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:text="新增權限用戶"
            android:textSize="25sp"
            android:textStyle="bold"
            android:tint="@android:color/black" />
        <EditText
            android:id ="@+id/etNew_userid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="#D9E3F2"
            android:drawablePadding="16dp"
            android:drawableTint="@android:color/black"
            android:hint="請輸入新增用戶帳號"
            android:padding="10dp"
            android:inputType="textPassword"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/darker_gray" />
        <Button
            android:id="@+id/badd_Next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="#2B5B82"
            android:text="下一步"
            android:textSize="20sp"
            android:textColor="@android:color/white" />
        <Button
            android:id="@+id/badd_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="#2B5B82"
            android:text="取消"
            android:textSize="20sp"
            android:textColor="@android:color/white" />



    </LinearLayout>

</RelativeLayout>
