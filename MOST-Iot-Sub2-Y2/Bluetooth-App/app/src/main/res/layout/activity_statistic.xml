            <View
                android:layout_height="2dip"
                android:background="#FF909090" />

            <TableRow>

                <TextView
                    android:layout_column="1"
                    android:padding="3dip"
                    android:text="Rank"
                    android:textColor="#2B5B82"
                    android:textSize="19sp" />

                <TextView
                    android:id="@+id/statistic_6"
                    android:gravity="right"
                    android:padding="3dip"
                    android:textColor="#2B5B82"
