<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mira.example.com.a2017617iot1.Register">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:text="註冊"
            android:textSize="25sp"
            android:textStyle="bold"
            android:tint="@android:color/black" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:text="註冊一組新的帳號"
            android:layout_marginTop="40dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:tint="@android:color/black" />

        <EditText
            android:id ="@+id/etReg_Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="#D9E3F2"
            android:drawablePadding="16dp"
            android:drawableTint="@android:color/black"
            android:hint="請輸入名稱"
            android:singleLine="true"
            android:padding="10dp"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/darker_gray" />
        <EditText
            android:id ="@+id/etReg_Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="#D9E3F2"
            android:drawablePadding="16dp"
            android:drawableTint="@android:color/black"
            android:hint="請輸入電子郵件信箱作為帳號"
            android:singleLine="true"
            android:padding="10dp"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/darker_gray" />
        <EditText
            android:id ="@+id/etReg_Password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="#D9E3F2"
            android:drawablePadding="16dp"
            android:drawableTint="@android:color/black"
            android:hint="請輸入密碼"
            android:singleLine="true"
            android:padding="10dp"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/darker_gray" />
        <EditText
            android:id ="@+id/etReg_Password2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="#D9E3F2"
            android:drawablePadding="16dp"
            android:drawableTint="@android:color/black"
            android:hint="請再次確認密碼"
            android:singleLine="true"
            android:padding="10dp"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/darker_gray" />

        <Button
            android:id="@+id/bRegister_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="#2B5B82"
            android:text="確認"
            android:textSize="20sp"
            android:textColor="@android:color/white" />



    </LinearLayout>

</RelativeLayout>
